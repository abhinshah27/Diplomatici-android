<androidx.cardview.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="8dp"
    card_view:cardPreventCornerOverlap="false">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include
            android:id="@+id/lower_section"
            layout="@layout/interest_basic_info_layout_round"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="center_vertical"
            android:minHeight="110dp"
            android:orientation="vertical"
            android:paddingBottom="@dimen/activity_margin_lg"
            card_view:layout_constraintBottom_toBottomOf="parent"/>

        <ImageView
            android:id="@+id/wall_image"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/background_rounded_2_top"
            android:scaleType="centerCrop"
            card_view:layout_constraintBottom_toTopOf="@+id/lower_section"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent" />

        <include
            android:id="@+id/interest_profile_picture"
            layout="@layout/custom_layout_profile_picture"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            card_view:layout_constraintBottom_toBottomOf="@+id/wall_image"
            card_view:layout_constraintEnd_toEndOf="@+id/wall_image"
            card_view:layout_constraintHeight_percent=".3"
            card_view:layout_constraintDimensionRatio="1:1"
            card_view:layout_constraintStart_toStartOf="@+id/wall_image"
            card_view:layout_constraintTop_toTopOf="@+id/wall_image" />

        <ImageView
            android:id="@+id/profile_badge"
            android:layout_width="0dp"
            android:layout_height="0dp"
            card_view:layout_constraintBottom_toBottomOf="@+id/interest_profile_picture"
            card_view:layout_constraintDimensionRatio="1:1"
            card_view:layout_constraintHeight_percent=".10"
            card_view:layout_constraintHorizontal_bias="0.28"
            card_view:layout_constraintStart_toStartOf="@+id/interest_profile_picture"
            card_view:layout_constraintTop_toTopOf="@+id/interest_profile_picture"
            card_view:layout_constraintVertical_bias="1.0"
            tools:src="@drawable/ic_event" />

        <TextView
            android:id="@+id/follow_unfollow_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            style="@style/BoldShadow18"
            android:padding="12dp"
            android:textColor="@color/white"
            tools:text="Follow"
            card_view:layout_constraintEnd_toEndOf="@id/wall_image"
            card_view:layout_constraintTop_toTopOf="@id/wall_image"
            />

        <TextView
            android:id="@+id/claim_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_below="@id/interest_profile_picture"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            style="@style/BoldShadow16"
            android:textAllCaps="true"
            android:textAlignment="center"
            android:maxLines="2"
            android:text="@string/interest_claim_pending"
            android:textColor="@color/colorAccent"
            android:visibility="gone"
            card_view:layout_constraintEnd_toEndOf="@id/wall_image"
            card_view:layout_constraintTop_toTopOf="@id/wall_image"
            />

